generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Measurement {
  id          Int      @id @default(autoincrement())
  moisture    Float
  light       Float
  temperature Float
  timestamp   DateTime @default(now())

  @@map("measurements")
}

model ConditionRecord {
  id        Int      @id @default(autoincrement())
  condition Int
  timestamp DateTime @default(now())

  @@map("condition_records")
}

model Activity {
  id        Int       @id @default(autoincrement())
  treatment Treatment
  timestamp DateTime  @default(now())

  @@map("activities")
}

enum Treatment {
  WATERED
  FERTILIZED
}
